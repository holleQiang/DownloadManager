<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/m_tool_bar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="?attr/colorPrimary"
                android:layout_height="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/iv_back"
                    app:srcCompat="@drawable/ic_nav_back"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"/>

                <ImageView
                    android:id="@+id/iv_close"
                    app:srcCompat="@drawable/ic_nav_close"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_back"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"/>

                <EditText
                    android:id="@+id/et_title"
                    android:textSize="16sp"
                    android:textColor="@color/toolbar_title_text_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_close"
                    app:layout_constraintEnd_toStartOf="@+id/iv_go"
                    android:maxLines="1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:imeOptions="actionSearch"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="?attr/actionBarSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_search_24"
                    android:padding="12dp"
                    android:layout_height="?attr/actionBarSize"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
            <com.zhangqiang.web.views.webview.NestedWebView
                android:id="@+id/m_web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/m_tool_bar" />

            <ProgressBar
                android:id="@+id/pb_progress"
                app:layout_constraintTop_toTopOf="@id/m_web_view"
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:minHeight="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>